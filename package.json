{
  "name": "mfe",
  "private": true,
  "workspaces": [
    "mfe/*",
    "packages/*"
  ],
  "scripts": {
    "sls:deploy:development": "serverless deploy --stage development --config serverless.yml",
    "sls:deploy:production": "serverless deploy --stage production --config serverless.yml",
    "sls:remove:development": "serverless remove --stage development --config serverless.yml",
    "sls:remove:production": "serverless remove --stage production --config serverless.yml",
    "deploy": "turbo run deploy --filter=@typer/root-config",
    "start": "turbo run start"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.4",
    "@commitlint/config-conventional": "^16.2.4",
    "dotenv": "^16.0.3",
    "lint-staged": "^12.4.1",
    "serverless": "^3.31.0",
    "serverless-dotenv-plugin": "^6.0.0",
    "serverless-s3-cleaner": "^2.0.2",
    "turbo": "^1.7.0"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.337.0",
    "aws4": "^1.12.0"
  }
}
